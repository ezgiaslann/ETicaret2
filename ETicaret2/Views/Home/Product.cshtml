@using ETicaret2.Models
@model IEnumerable<ProductModel>
@{
    ViewBag.Title = "Product";
}

<div id="mainBody">
    <div class="container">
        <div class="row">
            <!-- Sidebar ================================================== -->
            <div id="sidebar" class="span3">



                @Html.Action("Summary", "Cart")

                <ul id="sideManu" class="nav nav-tabs nav-stacked">
                    <li class="subMenu open">
                    
                    </li>

                    @Html.Action("_CategoryList", "Category")

                </ul>
                <br>
                @Html.Action("FeaturedProductList", "Home")
            </div>
            <!-- Sidebar end=============================================== -->
            <div class="span9">
                <ul class="breadcrumb">
                    <li><a href="/Home/Index">Ana Sayfa</a> <span class="divider">/</span></li>
                    <li class="active">Ürünler</li>
                </ul>
                <h3> Ürün İsimleri <small class="pull-right">   </small></h3>
                <hr class="soft">
                <br class="clr">                    
                    <div class="tab-pane  active" id="blockView">
                        <ul class="thumbnails">
                            @foreach (var item in Model)
                            {
                                <li class="span3">
                                    <div class="thumbnail" style="width:270px;height:310px">
                                        <a href="/Home/ProductDetails/@item.Id"><img style="width:160px; height:120px; max-width:160px; max-height:160px;" src="~/Content/Images/@item.Image" alt="" /></a>
                                        <div class="caption" style="width:260px; height:140px">
                                            <h5> <a href="/Home/ProductDetails/@item.Id">@item.Name</a></h5>
                                            <p>
                                                @item.Description
                                            </p>

                                            <h4 style="text-align:center"><a class="btn" href="/Home/ProductDetails/@item.Id">Görüntüle... <i class="icon-shopping-cart"></i></a> <a class="btn btn-primary" href="#">@item.Price TL</a></h4>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                        <hr class="soft">
                    </div>
                

                
                </div>
                <br class="clr">
            </div>
        </div>
    </div>


