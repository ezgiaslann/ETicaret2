@using ETicaret2.Models.Model
@model Product
@{
    ViewBag.Title = "ProductDetails";
}

<div id="mainBody">
    <div class="container">
        <div class="row">
            <!-- Sidebar ================================================== -->
            <div id="sidebar" class="span3">


                @Html.Action("Summary", "Cart")


                <ul id="sideManu" class="nav nav-tabs nav-stacked">
                    <li class="subMenu open">

                    </li>

                    @Html.Action("_CategoryList", "Category")

                </ul>
                <br>
                @Html.Action("FeaturedProductList", "Home")
            </div>
            <!-- Sidebar end=============================================== -->
            <div class="span9">
                <ul class="breadcrumb">
                    <li><a href="/Home/Index">Ana Sayfa</a> <span class="divider">/</span></li>
                    <li><a href="/Home/Product">Ürünler</a> <span class="divider">/</span></li>
                    <li class="active">Ürün Detayları</li>
                </ul>
                <div class="row">
                    <div id="gallery" class="span3">
                        <br />
                        <a href="~/Content/Images/@Model.Image">

                            <img src="~/Content/Images/@Model.Image" style="width:100%" />
                            
                        </a>
                        </div>
                        <div class="span6">
                            <ul id="productDetail" class="nav nav-tabs">
                                <li class="active"><a href="#home" data-toggle="tab">Ürün Detayı</a></li>
                            </ul>
                            <div id="myTabContent" class="tab-content">
                                <div class="tab-pane fade active in" id="home">
                                    <h4>Product Information</h4>
                                    <table class="table table-bordered">
                                        <tbody>
                                            <tr class="techSpecRow"><th colspan="2">Ürün Detay</th></tr>
                                            <tr class="techSpecRow"><td class="techSpecTD1">Adı: </td><td class="techSpecTD2">@Model.Name</td></tr>
                                            <tr class="techSpecRow"><td class="techSpecTD1">Açıklama:</td><td class="techSpecTD2">@Model.Description</td></tr>
                                            <tr class="techSpecRow"><td class="techSpecTD1">Fiyat:</td><td class="techSpecTD2">@Model.Price TL</td></tr>
                                            <tr class="techSpecRow"><td class="techSpecTD1">Adet:</td><td class="techSpecTD2"> @Model.Stock</td></tr>
                                            <tr class="techSpecRow">
                                                <th colspan=" 2">


                                                    @using (Html.BeginForm("AddToCart", "Cart"))
                                                    {
                                                        @Html.HiddenFor(i => i.Id)
                                                        <button type="submit" class=" btn btn-large btn-primary pull-left-right">Sepete ekle<i class=" icon-shopping-cart"></i></button>
                                                    }




                                                </th>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                                    <h5>Features</h5>
                                    <p>
                                        @Model.Description
                                    </p>
                                </div>
                                
                            </div>
                        </div>
                    </div>

            </div>
        </div>