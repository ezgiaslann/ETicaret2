@model IEnumerable<ETicaret2.Models.Model.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-xs-12">
        <!-- /.box -->

        <div class="box">

        </div><!-- /.box-header -->
        <div class=" box-body">
            <a class="btn btn-primary btn-block " href="@Url.Action("Create") ">Yeni Kayıt</a>
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Resim</th>

                        <th>Adı</th>
                        <th>Onaylı</th>
                        <th>Anasayfa</th>
                        <th>Popüler</th>
                        <th>Kategori Adı</th>
                        
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            <img src="~/Content/Images/@item.Image" width="75" height="50" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @if (item.IsApproved)
                            {
                                <label class="label label-success"><i class="fa fa-fw fa-check-square-o"></i> Evet</label>
                            }
                            else
                            {
                                <label class="label label-danger"><i class="fa fa-fw fa-times-circle"></i>Hayır</label>
                            }
                        </td>
                        <td>
                            @if (item.IsHome)
                            {
                                <label class="label label-success"><i class="fa fa-fw fa-check-square-o"></i>Evet</label>
                            }
                            else
                            {
                                <label class="label label-danger"><i class="fa fa-fw fa-times-circle"></i>Hayır</label>
                            }
                        </td>
                        <td>
                            @if (item.IsFeatured)
                            {
                                <label class="label label-success"><i class="fa fa-fw fa-check-square-o"></i>Evet</label>
                            }
                            else
                            {
                                <label class="label label-danger"><i class="fa fa-fw fa-times-circle"></i>Hayır</label>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.Name)
                        </td>
                        <td>
                            <a class="btn btn-primary btn-sm " href="@Url.Action("Edit", new {id = item.Id})"><i class="fa fa-fw fa-edit"></i>Düzenle</a>
                            <a class="btn btn-danger btn-sm " href="@Url.Action("Delete", new {id = item.Id})"><i class="fa fa-fw fa-trash"></i>Sil</a>

                        </td>
                    </tr>
                    }









                <tr>
                    <th>Resim</th>

                    <th>Adı</th>
                    <th>Onaylı</th>
                    <th>Anasayfa</th>
                    <th>Popüler</th>
                    <th>Kategori Adı</th>

                    <th></th>
                </tr>

            </table>
        </div><!-- /.box-body -->
    </div><!-- /.box -->
</div>
